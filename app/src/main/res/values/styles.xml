<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabs">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabTextAppearance">@style/tabsText</item>
    </style>

    <style name="tabsLand">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabTextAppearance">@style/tabsTextLand</item>
    </style>

    <style name="tabsText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabsTextLand" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="appMovie">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="appMoviePlot">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
